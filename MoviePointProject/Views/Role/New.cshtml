@model MoviePoint.ViewModel.RoleViewModel

@{
    Layout = "_NavAndFooterLayout";
    ViewData["Title"] = "New";
}


<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Add Role Page</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row" style="position:relative">
        <div class="col-md-5 mb-2 mx-auto">
            <form asp-action="New" style="position: relative;top: 50px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="theme-btn mb-3" />
                </div>
                <div class="mb-5">
                    <a asp-action="Home" asp-controller="Home">Back to Home</a>
                </div>
            </form>
        </div>
    </div>
</div>
@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
